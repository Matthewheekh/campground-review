<%- layout('/layouts/boilerplate') -%>
<link rel="stylesheet" href="/stylesheets/register.css">

<h1 class="text-center">Register</h1>

<div class="col-6 offset-3">
    <form action="/register" class="needs-validation" method="POST" novalidate>
        <div class="mb-3">
            <label for="username" class="form-label">Username</label>
            <input type="text" class="form-control" id="username" name="user[username]" required>
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email </label>
            <input type="email" id="email" class="form-control" name="user[email]" required>
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Password </label>
            <input type="password" id="password" class="form-control" name="user[password]" required>
        </div>
        <div class="mb-3">
            <a href="/campgrounds" class="btn btn-light">
                Back
            </a>
            <button type="submit" class="btn btn-primary float-end">Register</button>
        </div>
    </form>
</div>